# 数据库
DATABASE_URL="mysql://<username>:<password>@127.0.0.1:43371/handler_blog"

# 七牛云配置
QINIU_ACCESS_KEY=your_access_key
QINIU_SECRET_KEY=your_secret_key
QINIU_BUCKET=your_bucket_name
QINIU_REGION=your_region
# 七牛源站域名 (桶绑定的源站，用于 Next 代理转发)
QINIU_SOURCE_DOMAIN=http://your-qiniu-source-domain.com
# 前端渲染用的七牛源站域名 (用于把 /qiniu/... 转成完整链接)
NEXT_PUBLIC_QINIU_SOURCE_DOMAIN=http://your-qiniu-source-domain.com
# 上传域名 (七牛上传 API，通常是 up 域名或上传专用域名)
QINIU_UPLOAD_DOMAIN=https://upload-z1.qiniup.com
# 将代理域名配置为 /qiniu 或你的实际域名 (指向 /qiniu 的 Next 代理路由)
QINIU_DISPLAY_DOMAIN=/qiniu
# 前端渲染用的代理域名 (用于把 /qiniu/... 转成完整链接)
NEXT_PUBLIC_QINIU_DISPLAY_DOMAIN=/qiniu
# 七牛调试开关 (服务端)
QINIU_DEBUG=false

# 管理端认证
COMMENT_IP_SALT="change-me"
COMMENT_DEVICE_SECRET="change-me"
ADMIN_AUTH_SECRET="change-me"
ADMIN_AUTH_ISSUER="handler_blog"
# 是否强制使用 secure cookie (生产建议 true)
FORCE_SECURE_COOKIES="false"
# 禁用评论频率限制（仅测试用）
COMMENT_RATE_LIMIT_DISABLED="false"

# 阿里云验证码 2.0
ALIYUN_CAPTCHA_ACCESS_KEY_ID="your_access_key_id"
ALIYUN_CAPTCHA_ACCESS_KEY_SECRET="your_access_key_secret"
ALIYUN_CAPTCHA_REGION_ID="cn-hangzhou"
ALIYUN_CAPTCHA_ENDPOINT="captcha.aliyuncs.com"
ALIYUN_CAPTCHA_SCENE_ID="1p235cas"
NEXT_PUBLIC_ALIYUN_CAPTCHA_SCENE_ID="1p235cas"
NEXT_PUBLIC_ALIYUN_CAPTCHA_PREFIX="1m88em"
